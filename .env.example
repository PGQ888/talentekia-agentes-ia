# Configuración de TalentekIA
# Archivo de ejemplo para variables de entorno
# Copia este archivo a .env y completa con tus valores

# API Keys
OPENAI_API_KEY=tu_clave_api_openai
ANTHROPIC_API_KEY=tu_clave_api_anthropic
HUGGINGFACE_API_KEY=tu_clave_api_huggingface

# Configuración de rendimiento
# Opciones: eco, balanced, performance
PERFORMANCE_MODE=balanced

# Configuración de notificaciones
ENABLE_EMAIL_NOTIFICATIONS=false
NOTIFICATION_EMAIL=tu_email@ejemplo.com

# Configuración de base de datos
DATABASE_PATH=data/talentek.db

# Configuración de GitHub (opcional)
GITHUB_TOKEN=tu_token_github
GITHUB_REPO=PGQ888/talentek-ia

# Configuración de AnythingLLM (opcional)
ANYTHINGLLM_API_URL=http://localhost:3001/api
ANYTHINGLLM_API_KEY=tu_clave_api_anythingllm

# Configuración de LinkedIn (opcional)
LINKEDIN_USERNAME=tu_usuario_linkedin
LINKEDIN_PASSWORD=tu_contraseña_linkedin